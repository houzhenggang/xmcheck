<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:scrollbars="none" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/layoutPadding" >

        <TextView
            style="@style/TextTag"
            android:paddingBottom="10dip"
            android:text="@string/vomitSlot" />

        <TextView
            android:id="@+id/vomitSlot"
            style="@style/TextAbout"
            android:layout_width="fill_parent" />

        <TextView
            style="@style/TextTag"
            android:layout_marginTop="@dimen/layoutPadding"
            android:text="@string/aboutTag" />

        <LinearLayout
            android:layout_width="@dimen/itemHeightx2"
            android:layout_height="@dimen/itemHeightx1"
            android:orientation="horizontal" >

            <ImageView
                android:layout_width="@dimen/itemHeightx1"
                android:layout_height="fill_parent"
                android:contentDescription="@string/_null"
                android:scaleType="centerInside"
                android:src="@drawable/ic_launcher" />

            <TextView
                style="@style/TextAbout"
                android:layout_width="@dimen/itemHeightx1"
                android:layout_height="fill_parent"
                android:gravity="center"
                android:text="@string/iAppName" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="@dimen/itemHeightx2"
            android:layout_height="@dimen/itemHeightx1"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/version"
                style="@style/TextAbout"
                android:layout_width="@dimen/itemHeightx1"
                android:layout_height="fill_parent"
                android:gravity="center" />

            <ImageView
                android:layout_width="@dimen/itemHeightx1"
                android:layout_height="fill_parent"
                android:contentDescription="@string/_null"
                android:scaleType="centerInside"
                android:src="@drawable/logo_pro" />
        </LinearLayout>

        <TextView
            style="@style/TextTag"
            android:layout_marginTop="@dimen/layoutPadding"
            android:paddingBottom="10dip"
            android:text="@string/statement" />

        <TextView
            style="@style/TextAbout"
            android:layout_width="fill_parent"
            android:text="@string/iStatement" />

        <TextView
            style="@style/TextTag"
            android:layout_marginTop="@dimen/layoutPadding"
            android:paddingBottom="10dip"
            android:text="@string/author" />

        <TextView
            style="@style/TextAbout"
            android:text="@string/iAuthor" />

        <TextView
            style="@style/TextTag"
            android:layout_marginTop="@dimen/layoutPadding"
            android:text="@string/ps" />

        <TextView
            android:id="@+id/update"
            style="@style/TextAbout"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dip"
            android:text="@string/iUpdate" />

        <TextView
            android:id="@+id/feedback"
            style="@style/TextAbout"
            android:layout_width="fill_parent"
            android:layout_marginTop="10dip"
            android:text="@string/iFeedback" />
    </LinearLayout>

</ScrollView>